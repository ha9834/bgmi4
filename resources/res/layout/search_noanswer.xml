<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="40dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/history_icon"
            android:background="@drawable/icon_search_history"
            android:layout_width="13dp"
            android:layout_height="12dp"/>
        <com.tencent.grobot.lite.ui.view.component.HorizontalView
            android:layout_gravity="center_vertical"
            android:id="@+id/history_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/hot"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/history">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/hot_icon"
            android:background="@drawable/icon_search_hot"
            android:layout_width="11dp"
            android:layout_height="11dp"/>
        <com.tencent.grobot.lite.ui.view.component.HorizontalView
            android:layout_gravity="center_vertical"
            android:id="@+id/hot_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <TextView
        android:textSize="17sp"
        android:textColor="#7d858e"
        android:id="@+id/text_link"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:paddingStart="10dp"
        android:paddingEnd="6dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>
</RelativeLayout>
