<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_server"
    android:paddingLeft="@dimen/chat_item_pic_padding_left"
    android:paddingTop="@dimen/chat_item_pic_padding_top"
    android:paddingRight="@dimen/chat_item_pic_padding_right"
    android:paddingBottom="@dimen/chat_item_pic_padding_bottom"
    android:layout_width="134dp"
    android:layout_height="95dp"
    android:layout_marginLeft="@dimen/chat_server_padding_left"
    android:layout_marginTop="5dp"
    android:layout_marginRight="0dp"
    android:layout_marginStart="@dimen/chat_server_padding_left">
    <ImageView
        android:id="@+id/container_image"
        android:layout_width="@dimen/chat_item_pic_width"
        android:layout_height="@dimen/chat_item_pic_height"
        android:scaleType="centerCrop"/>
</RelativeLayout>
