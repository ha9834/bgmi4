<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="end"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="33dp">
    <Button
        android:textSize="10sp"
        android:textColor="@color/navigation_btn_highlight"
        android:id="@+id/btn_new"
        android:background="@drawable/bg_navigation_type_btn_clicked"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:minWidth="31dp"
        android:text="@string/news"/>
    <Button
        android:textSize="10sp"
        android:textColor="@color/navigation_btn_normal"
        android:id="@+id/btn_hot"
        android:background="@drawable/bg_navigation_type_right_btn"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:minWidth="31dp"
        android:text="@string/hot"/>
</LinearLayout>
