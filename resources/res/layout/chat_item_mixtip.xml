<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/bg_server"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="0dp"
    android:paddingStart="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="0dp">
    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.tencent.grobot.lite.ui.view.ChatTextView
            android:textSize="14sp"
            android:textColor="@color/chat_server_tx"
            android:id="@+id/chat_content"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:maxLines="2"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="5sp"
            android:layout_marginEnd="27dp"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/desLayout"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/chat_content">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/chat_server_tx"
                android:id="@+id/descText"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/chat_more"
                android:gravity="top|center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/moreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/more"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/text_layout"
        android:layout_alignTop="@+id/text_layout"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/text_layout"/>
</LinearLayout>
