<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_server"
    android:paddingBottom="6dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/chat_server_padding_left"
    android:layout_marginRight="0dp"
    android:maxWidth="400dp"
    android:layout_marginStart="@dimen/chat_server_padding_left"
    android:layout_marginEnd="0dp">
    <TextView
        android:textSize="13sp"
        android:textColor="@color/chat_server_tx"
        android:id="@+id/chat_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="400dp"
        android:maxLines="6"
        android:lineSpacingExtra="5sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/feedbackLayout"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/chat_content"
        android:layout_alignRight="@+id/chat_content"
        android:paddingEnd="15dp"
        android:layout_alignEnd="@+id/chat_content"/>
</RelativeLayout>
