<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_slice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="123dp"/>
    <RelativeLayout
        android:layout_gravity="end"
        android:id="@+id/rl_tags"
        android:layout_width="129dp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v_divider"
            android:background="@color/feeds_tag_horizon_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/ll_tags"/>
        <ImageView
            android:id="@+id/iv_feed_tag_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignStart="@+id/ll_tags"/>
        <ImageView
            android:id="@+id/iv_tag_band"
            android:layout_width="130dp"
            android:layout_height="213dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_tags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="182dp"
            android:layout_alignParentEnd="true">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp">
                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fl_tag_ask"
                    android:background="@drawable/bg_feeds_tag_ask"
                    android:layout_width="109dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/feeds_tag_ask_text"
                        android:layout_gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ask_me_about"
                        android:layout_marginStart="9dp"
                        app:fontFamily="@font/agency_bold"/>
                    <View
                        android:layout_gravity="end|center_vertical"
                        android:background="@color/feeds_tag_ask_divider"
                        android:layout_width="1dp"
                        android:layout_height="13dp"
                        android:layout_marginEnd="23dp"/>
                    <ImageView
                        android:layout_gravity="end|center_vertical"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_feeds_ask"
                        android:layout_marginEnd="9dp"/>
                </FrameLayout>
                <TextView
                    android:textSize="7sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="end|top"
                    android:id="@+id/splash_red_dot"
                    android:background="@drawable/bg_feed_red_dot"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99+"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    app:fontFamily="@font/agency_bold"/>
            </FrameLayout>
            <RelativeLayout
                android:layout_gravity="end"
                android:id="@+id/fl_recommands"
                android:background="@drawable/bg_feeds_tab_enable"
                android:layout_width="123dp"
                android:layout_height="35dp">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/feeds_tag_highlight"
                    android:gravity="start|center_vertical"
                    android:id="@+id/tv_recommands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trends"
                    android:layout_centerInParent="true"
                    app:fontFamily="@font/agency_bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="end"
                android:id="@+id/fl_videos"
                android:layout_width="123dp"
                android:layout_height="35dp">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/feeds_tag_highlight"
                    android:id="@+id/tv_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_videos"
                    android:layout_centerInParent="true"
                    app:fontFamily="@font/agency_bold"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:padding="4dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/iv_feed_close"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/feeds_close"
            android:layout_marginEnd="11dp"
            android:layout_alignEnd="@+id/ll_tags"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_gravity="end|top"
        android:id="@+id/feed_msg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="82dp">
        <TextView
            android:textSize="11sp"
            android:textColor="#c3c8cd"
            android:ellipsize="end"
            android:layout_gravity="end"
            android:id="@+id/tv_tip_msg"
            android:background="@drawable/bg_tip_msg"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="306dp"
            android:maxLines="2"
            android:lineSpacingExtra="5dp"
            app:fontFamily="@font/agency_bold"/>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/iv_gift"
            android:visibility="gone"
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:src="@drawable/icon_gift"/>
    </FrameLayout>
</merge>
