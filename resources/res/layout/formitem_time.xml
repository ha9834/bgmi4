<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:textColor="@color/form_star"
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-3dp"
        android:text="*"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/help_item_title"
        android:ellipsize="end"
        android:id="@+id/title"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:paddingEnd="10dp"
        android:layout_marginStart="15dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/title"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp">
        <EditText
            android:textSize="12sp"
            android:textColor="@color/normal_text_color"
            android:textColorHint="@color/form_text_hint_color"
            android:gravity="center"
            android:id="@+id/et_year"
            android:background="@drawable/bg_table_item"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:imeOptions="actionDone"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/normal_text_hint_color"
            android:gravity="center"
            android:id="@+id/tv_divider"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text="/"/>
        <EditText
            android:textSize="12sp"
            android:textColor="@color/normal_text_color"
            android:textColorHint="@color/form_text_hint_color"
            android:gravity="center"
            android:id="@+id/et_month"
            android:background="@drawable/bg_table_item"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:imeOptions="actionNext"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/normal_text_hint_color"
            android:gravity="center"
            android:id="@+id/tv_divider_after"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text="/"/>
        <EditText
            android:textSize="12sp"
            android:textColor="@color/normal_text_color"
            android:textColorHint="@color/form_text_hint_color"
            android:gravity="center"
            android:id="@+id/et_day"
            android:background="@drawable/bg_table_item"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:inputType="numberSigned"
            android:imeOptions="actionNext"/>
    </LinearLayout>
</merge>
