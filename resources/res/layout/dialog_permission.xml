<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:id="@+id/permissiondialog_message"
        android:padding="1dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxWidth="400dp"/>
    <View
        android:background="#dfdfdf"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#000000"
            android:id="@+id/permissiondialog_button_negative"
            android:background="@drawable/bg_permission_negative_button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="No"
            android:layout_weight="1"
            style="?attr/buttonBarButtonStyle"/>
        <Button
            android:textColor="#ffffff"
            android:id="@+id/permissiondialog_button_positive"
            android:background="@drawable/bg_permission_positive_button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Yes"
            android:layout_weight="1"
            style="?attr/buttonBarButtonStyle"/>
    </LinearLayout>
</LinearLayout>
