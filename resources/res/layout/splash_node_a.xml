<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_slice_splash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="220dp">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_marginTop="1dp"/>
    <FrameLayout
        android:background="@drawable/bg_slice_splash_a_time"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="137dp"
        android:layout_marginRight="1dp">
        <com.tencent.grobot.lite.recommends.TimeOutIcon
            android:layout_gravity="end|bottom"
            android:id="@+id/icon_timeout"
            android:layout_width="36dp"
            android:layout_height="12dp"
            android:layout_marginBottom="8dp"
            android:layoutDirection="ltr"
            android:layout_marginEnd="7dp"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:id="@+id/ll_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:layout_marginStart="6dp">
        <View
            android:id="@+id/v_indicator_dot"
            android:layout_width="9dp"
            android:layout_height="2dp"/>
        <View
            android:id="@+id/v_indicator_dot_1"
            android:layout_width="9dp"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"/>
        <View
            android:id="@+id/v_indicator_dot_2"
            android:layout_width="9dp"
            android:layout_height="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="7sp"
                android:textColor="@color/recommends_node_icon"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_icon"
                android:padding="0dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                app:fontFamily="@font/agency_bold"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/recommends_node_title"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:fontFamily="@font/agency_bold"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="start"
            android:orientation="horizontal"
            android:id="@+id/ll_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="9dp"
                android:layout_height="6dp"
                android:src="@drawable/icon_splash_node_a_view"/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/recommends_node_a_lint"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                app:fontFamily="@font/agency_bold"/>
        </LinearLayout>
        <TextView
            android:textSize="9sp"
            android:textColor="@color/recommends_node_a_lint"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            app:fontFamily="@font/agency_bold"/>
    </RelativeLayout>
</FrameLayout>
