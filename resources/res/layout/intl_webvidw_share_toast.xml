<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/intl_webview_share_bg_toast"
    android:paddingLeft="@dimen/toast_padding_lr"
    android:paddingRight="@dimen/toast_padding_lr"
    android:layout_width="@dimen/toast_width"
    android:layout_height="@dimen/toast_bg_height">
    <TextView
        android:textSize="@dimen/cancel_font_size"
        android:typeface="sans"
        android:textColor="@color/intl_webview_color_toast_text"
        android:gravity="center"
        android:id="@+id/toast_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toast_bg_height"
        android:text="@string/share_success"/>
</LinearLayout>
