<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_gravity="start|top"
        android:id="@+id/iv_display"
        android:layout_width="112dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_gravity="start|top"
        android:background="@drawable/bg_slice_splash_a_time"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:layout_marginTop="52dp"/>
    <com.tencent.grobot.lite.recommends.TimeOutIcon
        android:layout_gravity="start|bottom"
        android:id="@+id/icon_timeout"
        android:layout_width="36dp"
        android:layout_height="12dp"
        android:layout_marginBottom="11dp"
        android:layoutDirection="ltr"
        android:layout_marginStart="71dp"/>
    <RelativeLayout
        android:layout_gravity="start|top"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="112dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/recommends_node_title"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="2"
                app:fontFamily="@font/agency_bold"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/ll_views"
            android:layout_alignParentStart="true">
            <TextView
                android:textSize="9sp"
                android:textColor="@color/recommends_node_sub"
                android:ellipsize="end"
                android:id="@+id/tv_tag"
                android:background="@drawable/bg_recommends_nod_sub"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:lines="1"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginStart="8dp"
                android:paddingVertical="2dp"
                app:fontFamily="@font/agency_bold"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/icon_splash_node_a_view"/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/recommends_node_a_lint"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                app:fontFamily="@font/agency_bold"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/v_divider"
        android:background="#338b939b"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</merge>
